<!-- Custom CSS -->
<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');

    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(to right, #141e30, #243b55);
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
    }

    .login-container {
        background: rgba(255, 255, 255, 0.1);
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.3);
        text-align: center;
        backdrop-filter: blur(12px);
        width: 380px;
        position: relative;
        animation: fadeIn 1s ease-in-out;
    }

    h2 {
        color: #fff;
        margin-bottom: 15px;
        font-weight: 600;
    }

    p.security-warning {
        font-size: 14px;
        color: rgba(255, 255, 255, 0.7);
        background: rgba(255, 0, 0, 0.2);
        padding: 10px;
        border-radius: 8px;
        margin-bottom: 15px;
        font-weight: 500;
    }

    input {
        width: 100%;
        padding: 12px;
        margin: 10px 0;
        border-radius: 6px;
        border: none;
        outline: none;
        font-size: 16px;
        background: rgba(255, 255, 255, 0.2);
        color: #fff;
    }

    input::placeholder {
        color: rgba(255, 255, 255, 0.7);
    }

    button {
        width: 100%;
        padding: 12px;
        background: #00c6ff;
        border: none;
        border-radius: 6px;
        color: white;
        font-size: 18px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    button:hover {
        background: #0072ff;
    }

    .zip-warning {
        margin-top: 15px;
        font-size: 13px;
        color: rgba(255, 255, 255, 0.6);
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<%- include('parcials/after_import') %>
